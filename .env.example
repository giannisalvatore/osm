PORT=3000
NODE_ENV=production

# URL pubblico del backend (usato dal frontend lato client e dal mailer)
PUBLIC_API_URL=https://api.osmagent.com
OSM_API_URL=https://api.osmagent.com

# MySQL Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=osm
DB_USER=root
DB_PASS=cambia_questa_password

# Resend (email di verifica account)
# Ottieni la tua API key su https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxx

# Email usata da Traefik per Let's Encrypt
ACME_EMAIL=tuaemail@example.com

# GitHub Personal Access Token (usato dal servizio discovery per crawlare SKILL.md)
# Crea un token su https://github.com/settings/tokens (scope: public_repo Ã¨ sufficiente)
# Senza token il discovery funziona ma con rate limit ridotto (60 req/h invece di 5000)
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxx
