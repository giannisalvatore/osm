---
import AppLayout from '../../layouts/AppLayout.astro';

const API_URL = import.meta.env.PUBLIC_API_URL || 'https://api.osmagent.com';
const skillName = Astro.params.name || '';

// SSR: Fetch skill data for SEO
let skillData = null;
let filesData = null;
let pageTitle = 'OSM';
let pageDescription = 'OSM (Open Skills Manager) - An agent skills registry. Discover, share, and manage AI agent skills.';

try {
  const [metaRes, filesRes] = await Promise.all([
    fetch(`${API_URL}/registry/${encodeURIComponent(skillName)}`),
    fetch(`${API_URL}/registry/${encodeURIComponent(skillName)}/files`)
  ]);
  
  if (metaRes.ok) {
    const data = await metaRes.json();
    if (!data.error) {
      skillData = data;
      const latestVersion = data['dist-tags']?.latest || Object.keys(data.versions || {})[0];
      const versionData = data.versions?.[latestVersion] || {};
      
      pageTitle = data.name;
      pageDescription = data.description || versionData.description || `${data.name} - An agent skill`;
    }
  }
  
  if (filesRes.ok) {
    filesData = await filesRes.json();
  }
} catch (error) {
  console.error('Error fetching skill data for SEO:', error);
}
---

<AppLayout title={pageTitle} description={pageDescription}>
  <div class="detail-content">

    <a href="/" class="back-link">← Back</a>

    <div id="skill-loading">
      <div class="skeleton-title"></div>
      <div class="skeleton-desc"></div>
    </div>

    <div id="skill-error" style="display:none">
      <p class="error-title">Error</p>
      <p class="detail-description" id="error-msg"></p>
    </div>

    <div id="skill-body" style="display:none">

      <div class="detail-hero">
        <div id="skill-author-hero" style="display:none" class="author-hero">
          <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M19 21v-2a4 4 0 0 0-4-4H9a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>
          <span id="skill-author-hero-name"></span>
        </div>
        <h1 class="detail-name" id="skill-name"></h1>
        <p class="detail-description" id="skill-description"></p>
        <div class="detail-meta">
          <span class="meta-label">Version</span>
          <span class="meta-value" id="skill-version"></span>
          <span class="meta-sep">·</span>
          <span class="meta-label">Downloads</span>
          <span class="meta-value" id="skill-downloads"></span>
            <span id="skill-license-block" style="display:none">
              <span class="meta-sep">·</span>
              <span class="meta-label">License</span>
              <span class="meta-value" id="skill-license"></span>
            </span>
        </div>
      </div>

      <div class="detail-section">
        <div class="install-row">
          <code class="install-code" id="install-cmd"></code>
          <button class="copy-btn" id="copy-btn">Copy</button>
        </div>
      </div>

      <div class="detail-section tabs-section" id="tabs-section" style="display:none">
        <div class="tabs-bar">
          <button class="tab-btn active" data-tab="skill">SKILL.md</button>
          <button class="tab-btn " data-tab="readme">Readme</button>
          <button class="tab-btn" data-tab="files">Files</button>
        </div>
        <div class="tab-panel " id="tab-skill">
          <div class="readme-content" id="skill-md-content"></div>
        </div>
        <div class="tab-panel hidden" id="tab-readme">
          <div class="readme-content" id="readme-content"></div>
        </div>
        <div class="tab-panel hidden" id="tab-files">
          <ul class="file-tree" id="file-tree"></ul>
        </div>
      </div>

      <div class="detail-section" id="deps-section" style="display:none">
        <h2 class="section-label">Dependencies</h2>
        <div class="skills-list" id="deps-list"></div>
      </div>

      <div class="detail-section" id="repo-section" style="display:none">
        <a href="#" target="_blank" class="github-link" id="repo-link">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
