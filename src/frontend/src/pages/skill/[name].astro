    </div>

  </div>
</AppLayout>

<style is:global>
  .detail-content {
    max-width: 700px;
    margin: 0 auto;
    width: 100%;
  }

  /* ── Detail hero ── */

  .author-hero {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 12px;
    color: var(--color-gray-text);
    font-family: var(--font-mono);
    letter-spacing: -0.2px;
    margin-bottom: 8px;
  }
  .author-hero svg { flex-shrink: 0; }

  .detail-name {
    font-size: 28px;
    font-weight: 700;
    letter-spacing: -1px;
    margin: 0 0 12px 0;
    color: var(--color-black);
  }

  .detail-description {
    font-size: 14px;
    color: var(--color-gray-text);
    margin: 0 0 20px 0;
    line-height: 1.6;
    letter-spacing: -0.3px;
  }

  .detail-meta {
    display: flex;
    gap: 8px;
    align-items: center;
    font-size: 13px;
  }

  .meta-label { color: var(--color-gray-text); }
  .meta-value {
    color: var(--color-black);
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 5px;
  }
  .meta-sep { color: var(--color-gray-border); }

  /* ── Detail section ── */
  .detail-section {
    padding-top: 32px;
    margin-bottom: 32px;
  }

  /* ── Install row (skill detail) ── */
  .install-row {
    display: flex;
    align-items: stretch;
    border: 1px solid #111;
    height: 56px;
  }

  .install-code {
    flex: 1;
    font-family: var(--font-mono);
    font-size: 14px;
    letter-spacing: -0.5px;
    padding: 0 20px;
    display: flex;
    align-items: center;
    background: transparent;
    border: none;
    color: var(--color-black);
    font-weight: 500;
  }

  .copy-btn {
    background: var(--color-black);
    color: var(--color-white);
    border: none;
    font-family: var(--font-mono);
    font-size: 14px;
    font-weight: 500;
    padding: 0 24px;
    cursor: pointer;
    letter-spacing: -0.3px;
  }

  .copy-btn:hover { background: var(--color-black); }

  /* ── GitHub link ── */
  .github-link {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-size: 14px;
    color: var(--color-gray-text);
    text-decoration: none;
    letter-spacing: -0.3px;
  }

  .github-link:hover { color: var(--color-black); }

  /* Skeletons */
  .skeleton-title {
    height: 28px;
    width: 220px;
    background: var(--color-surface);
    border-radius: 4px;
    margin: 0 0 14px;
    animation: pulse 1.4s ease-in-out infinite;
  }
  .skeleton-desc {
    height: 16px;
    width: 380px;
    max-width: 100%;
    background: var(--color-surface);
    border-radius: 4px;
    animation: pulse 1.4s ease-in-out infinite;
  }
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50%       { opacity: 0.4; }
  }

  /* Error */
  .error-state { padding: 40px 0; }

  .error-title {
    font-size: 20px;
    font-weight: 700;
    margin: 0 0 12px 0;
  }
  
  #skill-license-block{
    display: flex;
    gap: 10px;
  }

  /* Tabs */
  .tabs-section { padding-top: 0; }
  .tabs-bar {
    display: flex;
    gap: 0;
    border-bottom: 1px solid var(--color-gray-border);
    margin-bottom: 20px;
  }
  .tab-btn {
    background: none;
    border: none;
    border-bottom: 2px solid transparent;
    padding: 10px;
    font-family: var(--font-mono);
    font-size: 13px;
    font-weight: 700;
    cursor: pointer;
    color: var(--color-gray-text);
    margin-bottom: -1px;
    letter-spacing: -0.3px;
    transition: color 0.15s, border-color 0.15s;

  }
  .tab-btn.active {
    color: var(--color-black);
    border-bottom-color: var(--color-black);
  }
  .tab-panel.hidden { display: none; }

  /* Markdown readme */
  .readme-content {
    border-radius: 6px;
    font-family: var(--font-mono);
    font-size: 13px;
    line-height: 1.75;
    color: var(--color-black);
    overflow-x: auto;
  }
  .readme-content h1, .readme-content h2, .readme-content h3,
  .readme-content h4, .readme-content h5, .readme-content h6 {
    font-weight: 700;
    margin: 2em 0 0.4em;
    line-height: 1.3;
    color: var(--color-black);
  }
  .readme-content h1 { font-size: 1.35em; margin-top: 0;}
  .readme-content h2 { font-size: 1.15em; }
  .readme-content h3 { font-size: 1em; }
  .readme-content p  { margin: 0.75em 0; }
  .readme-content ul, .readme-content ol {
    padding-left: 1.4em;
    margin: 0.6em 0;
  }
  .readme-content li { margin: 0.75em 0; }
  .readme-content code {
    background: var(--color-surface);
    padding: 1px 5px;
    border-radius: 3px;
    font-size: 0.9em;
  }
  .readme-content pre {
    background: var(--color-surface);
    color: var(--color-black);
    padding: 14px 18px;
    border-radius: 5px;
    overflow-x: auto;
    margin: 0.8em 0;
  }
  .readme-content pre code {
    background: none;
    padding: 0;
    font-size: 0.85em;
  }
  .readme-content a { color: #6d28d9; text-decoration: underline; }
  .readme-content hr {
    border: none;
    border-top: 1px solid var(--color-gray-border);
    margin: 1.2em 0;
  }
  .readme-content blockquote {
    border-left: 3px solid var(--color-gray-border);
    margin: 0.8em 0;
    padding: 4px 16px;
    color: var(--color-gray-text);
  }
  .tab-empty {
    color: var(--color-gray-text);
    font-size: 13px;
    margin: 0;
  }

  .file-tree {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }
  .file-entry {
    display: flex;
    align-items: center;
    gap: 7px;
    font-family: var(--font-mono);
    font-size: 12px;
    color: var(--color-black);
  }
  .file-entry svg {
    flex-shrink: 0;
    color: var(--color-gray-text);
  }
</style>

<script define:vars={{ API_URL, skillData, filesData, skillName }}>
  window.__OSM_API_URL__ = API_URL;
  window.__OSM_SKILL_DATA__ = skillData;
  window.__OSM_FILES_DATA__ = filesData;
  window.__OSM_SKILL_NAME__ = skillName;
</script>

<script>
  import { marked } from 'marked';

  const API_URL   = window.__OSM_API_URL__ || 'http://localhost:3000';
  const skillName = window.__OSM_SKILL_NAME__ || decodeURIComponent(window.location.pathname.split('/skill/')[1] || '');
  const ssrSkillData = window.__OSM_SKILL_DATA__;
  const ssrFilesData = window.__OSM_FILES_DATA__;

  const elLoading  = document.getElementById('skill-loading');
  const elError    = document.getElementById('skill-error');
  const elBody     = document.getElementById('skill-body');
  const elErrorMsg = document.getElementById('error-msg');

  function show(el) { el.style.display = ''; }
  function hide(el) { el.style.display = 'none'; }

  function fmtDownloads(n) {
    const SVG = `<svg width="11" height="11" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" style="vertical-align:-1px;margin-right:2px"><path d="M12 5v14M19 12l-7 7-7-7" stroke-linecap="round" stroke-linejoin="round"/></svg>`;
    return SVG + (n >= 1000 ? (n / 1000).toFixed(1) + 'k' : String(n || 0));
  }

  async function load() {
    try {
      // Use SSR data if available, otherwise fetch
      let data, filesData;
      
      if (ssrSkillData) {
        data = ssrSkillData;
        filesData = ssrFilesData || { files: [], contents: {} };
      } else {
        const [metaRes, filesRes] = await Promise.all([
          fetch(`${API_URL}/registry/${encodeURIComponent(skillName)}`),
          fetch(`${API_URL}/registry/${encodeURIComponent(skillName)}/files`),
        ]);

        data = await metaRes.json();
        if (!metaRes.ok || data.error) throw new Error(data.error || 'Skill not found');
        filesData = filesRes.ok ? await filesRes.json() : { files: [], contents: {} };
      }

      if (data.error) throw new Error(data.error || 'Skill not found');

      const latestVersion = data['dist-tags']?.latest || Object.keys(data.versions || {})[0];
      const versionData   = data.versions?.[latestVersion] || {};
      const skill = {
        name:         data.name,
        description:  data.description || versionData.description || '',
        version:      latestVersion,
        downloads:    data.downloads || 0,
        author:       data.author || null,
        repository:   versionData.repository || null,
        dependencies: versionData.dependencies || null,
      };

      document.title = `${skill.name} - OSM`;
      document.getElementById('skill-name').textContent        = skill.name;
      document.getElementById('skill-description').textContent = skill.description;
      document.getElementById('skill-version').textContent     = skill.version;
      document.getElementById('skill-downloads').innerHTML     = fmtDownloads(skill.downloads);
      document.getElementById('install-cmd').textContent       = `osm install ${skill.name}`;

      if (skill.author) {
        document.getElementById('skill-author-hero-name').textContent = skill.author;
        show(document.getElementById('skill-author-hero'));
      }

      if (skill.repository) {
        document.getElementById('repo-link').href = skill.repository;
        show(document.getElementById('repo-section'));
      }

      if (skill.dependencies && Object.keys(skill.dependencies).length > 0) {
        const list = document.getElementById('deps-list');
        for (const [dep, ver] of Object.entries(skill.dependencies)) {
          list.innerHTML += `<div class="skill-item"><span class="skill-name">${dep}</span><span class="skill-spacer"></span><span class="skill-downloads">${ver}</span></div>`;
        }
        show(document.getElementById('deps-section'));
      }

      document.getElementById('copy-btn').addEventListener('click', () => {
        navigator.clipboard.writeText(`osm install ${skill.name}`).then(() => {
          const btn = document.getElementById('copy-btn');
          btn.textContent = 'Copied!';
          setTimeout(() => btn.textContent = 'Copy', 2000);
        });
      });

      // Files and tabs
      const fileList  = filesData.files || [];
      const contents  = filesData.contents || {};
      const readmeKey  = Object.keys(contents).find(k => /readme/i.test(k));
      const skillMdKey = Object.keys(contents).find(k => /skill\.md$/i.test(k));

      if (fileList.length > 0 || readmeKey || skillMdKey) {
          show(document.getElementById('tabs-section'));

          const readmeEl = document.getElementById('readme-content');
          if (readmeKey) {
            readmeEl.innerHTML = marked.parse(contents[readmeKey]);
          } else {
            readmeEl.outerHTML = '<p class="tab-empty">No README found.</p>';
          }

          const skillMdEl = document.getElementById('skill-md-content');
          if (skillMdKey) {
            const raw = contents[skillMdKey];
            const fmMatch = raw.match(/^---\r?\n([\s\S]*?)\r?\n---\r?\n?([\s\S]*)$/);
            let bodyMd = raw;
            if (fmMatch) {
              // Extract license for the meta bar only
              const fmLines = fmMatch[1].split('\n').filter(l => l.trim());
              const licenseLine = fmLines.find(l => /^license\s*:/i.test(l));
              if (licenseLine) {
                const licVal = licenseLine.slice(licenseLine.indexOf(':') + 1).trim();
                document.getElementById('skill-license').textContent = licVal;
                show(document.getElementById('skill-license-block'));
              }
              bodyMd = fmMatch[2];
            }
            skillMdEl.innerHTML = bodyMd.trim() ? marked.parse(bodyMd) : '<p class="tab-empty">No content.</p>';
          } else {
            skillMdEl.outerHTML = '<p class="tab-empty">No SKILL.md found.</p>';
          }

          const fileTree = document.getElementById('file-tree');
          if (fileList.length > 0) {
            fileList.forEach(f => {
              fileTree.innerHTML += `<li class="file-entry"><svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/><polyline points="14 2 14 8 20 8"/></svg>${f}</li>`;
            });
          } else {
            fileTree.outerHTML = '<p class="tab-empty">No files available.</p>';
          }
        }

      hide(elLoading);
      show(elBody);

    } catch (err) {
      hide(elLoading);
      elErrorMsg.textContent = err.message || 'Unable to load skill';
      show(elError);
    }
  }

  if (skillName) {
    load();
  } else {
    hide(elLoading);
    elErrorMsg.textContent = 'Invalid skill URL';
    show(elError);
  }

  // Tabs
  document.querySelectorAll('.tab-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      document.querySelectorAll('.tab-panel').forEach(p => p.classList.add('hidden'));
      document.getElementById('tab-' + btn.dataset.tab)?.classList.remove('hidden');
    });
  });
</script>
